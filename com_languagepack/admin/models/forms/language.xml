<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset addfieldpath="/administrator/components/com_languagepack/models/fields">
		<field
			name="id"
			type="hidden"
		/>
		<field
			name="name"
			type="text"
			label="COM_LANGUAGEPACK_LANGUAGE_NAME_LABEL"
			size="40"
			class="inputbox"
			default=""
		/>
		<field
			name="alias"
			type="text"
			label="COM_LANGUAGEPACK_LANGUAGE_ALIAS_LABEL"
			size="40"
			class="inputbox"
			default=""
		/>
		<field
			name="lang_code"
			type="text"
			label="COM_LANGUAGEPACK_LANGUAGE_LANGUAGE_CODE_LABEL"
			size="40"
			class="inputbox"
			default=""
		/>
		<field
			name="group_id"
			type="UsergroupList"
			default="8"
			label="COM_LANGUAGEPACK_LANGUAGE_GROUP_LABEL"
		/>
		<field
			name="source_id"
			type="Languagepack.Source"
			label="COM_LANGUAGEPACK_LANGUAGE_SOURCE_LABEL"
			default="3"
		/>
		<field
			name="application_id"
			type="Languagepack.Application"
			label="COM_LANGUAGEPACK_LANGUAGE_APPLICATION_LABEL"
		/>
		<field
			name="ars_category"
			type="Languagepack.Arscategory"
			label="COM_LANGUAGEPACK_LANGUAGE_ARS_CATEGORY_LABEL"
		/>
		<field
			name="coordinator"
			type="text"
			label="COM_LANGUAGEPACK_LANGUAGE_COORDINATOR_LABEL"
			size="40"
			class="inputbox"
			default=""
		/>
		<field
			name="coordinator_forum_id"
			type="text"
			label="COM_LANGUAGEPACK_LANGUAGE_COORDINATOR_FORUM_ID_LABEL"
			size="6"
			class="inputbox"
			default=""
			validate="number"
			filter="integer"
		/>
		<field
			name="coordinator_email"
			type="text"
			label="COM_LANGUAGEPACK_LANGUAGE_COORDINATOR_EMAIL_LABEL"
			size="40"
			class="inputbox"
			default=""
		/>
		<field
			name="website"
			type="url"
			label="COM_LANGUAGEPACK_LANGUAGE_WEBSITE_LABEL"
			filter="url"
			validate="url"
			size="40"
			class="inputbox"
			default=""
		/>
		<field
			name="state"
			type="list"
			label="JSTATUS"
		>
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
		</field>
	</fieldset>
</form>
